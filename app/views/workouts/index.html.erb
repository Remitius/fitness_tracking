<% provide(:title, 'Index') %>
<%= render layout: 'layouts/header' do %> 
<% end %> 

<% page = params[:page].to_i unless params[:page].nil? %> 
<% if page && page > 1 %> 
  <%= link_to 'Previous Page', root_path(page: page-1)%> 
  <%= link_to 'Next Page', root_path(page: page+1) if params[:next_page_valid] %> 
<% else %> 
  <%= link_to 'Next Page', root_path(page: 2) if params[:next_page_valid] %> 
<% end %> 


<% if @workouts %>
  <section>
    <% @workouts.each do |w| %>
    <h4 class='workout_name'><%= link_to w.name, w, class: 'workout_name_link' %>&nbsp;
        <%= w.date.strftime("%a, %b %d, %Y") %></h4>
    <% end %>
  </section>
<% end %> 
